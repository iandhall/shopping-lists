@{
    ViewBag.Title = "Home Page";
}
<div class="row" style="margin-top: 1em;">
    <div class="col-sm-4 col-sm-offset-2 col-md-3 col-md-offset-3 visible-sm visible-md visible-lg">
        <img src="~/Content/Images/shoppinglist.jpg" />
    </div>
    <div class="col-sm-4 col-md-3">
        <h1 style="font-size: 50px;">Shopping Lists</h1>
        <p>Share online shopping lists with friends and family.</p>

        @if (Request.IsAuthenticated) {
            <p>@Html.ActionLink("Click here to show My Lists.", "Index", "ShoppingList")</p>
        } else {
            <p>@Html.ActionLink("Click here to log in if you already have an account.", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
            <p>@Html.ActionLink("Otherwise, click here to register.", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</p>
        }
    </div>
    <div class="col-xs-1 visible-xs">
        <img src="~/Content/Images/shoppinglist.jpg" />
    </div>
</div>

